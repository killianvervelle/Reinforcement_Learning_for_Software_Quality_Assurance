{
    "family": "my-ecs-task",
    "containerDefinitions": [
        {
            "name": "my-app",
            "image": "222656491673.dkr.ecr.eu-west-3.amazonaws.com/my_ecr_repository:PLACEHOLDER_TAG",
            "cpu": 1024,
            "memory": 2048,
            "portMappings": [
                {
                    "name": "my-app-8000-tcp",
                    "containerPort": 8000,
                    "hostPort": 8000,
                    "protocol": "tcp",
                    "appProtocol": "http"
                }
            ], 
            "essential": true,
            "environment": [
                {
                    "name": "environment",
                    "value": "production"
                }
            ], 
            "environmentFiles": [],
            "mountPoints": [],
            "volumesFrom": [],
            "ulimits": [],
            "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                    "awslogs-group": "/ecs/my-ecs-task",
                    "mode": "non-blocking",
                    "awslogs-create-group": "true",
                    "max-buffer-size": "25m",
                    "awslogs-region": "eu-west-3",
                    "awslogs-stream-prefix": "ecs"
                },
                "secretOptions": [] 
            },
            "systemControls": []
        }
    ],
    "executionRoleArn": "arn:aws:iam::222656491673:role/ecsTaskExecutionRole",
    "networkMode": "awsvpc",
    "volumes": [],
    "placementConstraints": [],
    "cpu": "1024",  
    "memory": "2048",
    "runtimePlatform": {
        "cpuArchitecture": "X86_64",
        "operatingSystemFamily": "LINUX"
    }
}

